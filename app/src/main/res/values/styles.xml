<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/OnOffButton</item>
        <item name="android:textViewStyle">@style/OutletLabel</item>
    </style>

    <style name="OnOffButton" parent="android:Widget.Button">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:onClick">OnClick</item>
    </style>

    <style name="OutletLabel" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
